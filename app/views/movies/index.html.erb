<div class="flex flex-col mb-8 w-full">
  <%= form_with url: movies_path, method: :get do |form| %>
    <div class="flex mb-8">
      <%= form.text_field(
        :search, placeholder: "Search", value: params[:search],
        class: [
          "block w-full rounded-l-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300",
          "placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
        ]
      ) %>

      <%= form.select(
        :search_type,
        [["Full-text search", "full_text"], ["Vector search", "vector"]],
        { selected: params[:search_type] },
        class: "block rounded-none rounded-r-md border-0 bg-gray-100 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
      ) %>
    </div>
  <% end %>

  <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    <% @movies.each do |movie| %>
      <%= render partial: "movie", locals: {movie:} %>
    <% end %>
  </ul>
</div>
