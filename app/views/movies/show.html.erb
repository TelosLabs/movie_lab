<div class="flex flex-col w-full">
  <div class="px-4 py-6 flex align-center self-center justify-center gap-x-4 max-w-md border rounded-md bg-white">
    <img class="mx-auto h-32 w-22 flex-shrink-0 rounded-md mt-1" src="<%= @movie.full_poster_path %>">
    <div class="flex flex-col">
      <p class="text-base leading-7 font-semibold"><%= @movie.title %></p>
      <p class="mt-1 text-sm leading-6 text-gray-700"><%= @movie.overview %></p>
    </div>
  </div>

  <div class="mb-8">
    <h3 class="text-base font-semibold leading-7 text-gray-900 mt-4 mb-6">Similar movies</h3>
    <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      <% @movie.similar.each do |movie| %>
        <%= render partial: "movie", locals: { movie: } %>
      <% end %>
    </ul>
  </div>
</div>
